<p id="notice"><%= notice %></p>

<h1>Customer Documents</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Content</th>
      <th>Public level</th>
      <th>User</th>
      <th>Customer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customer_documents.each do |customer_document| %>
      <tr>
        <td><%= customer_document.name %></td>
        <td><%= customer_document.content %></td>
        <td><%= customer_document.public_level %></td>
        <td><%= customer_document.user %></td>
        <td><%= customer_document.customer %></td>
        <td><%= link_to 'Show', customer_document %></td>
        <td><%= link_to 'Edit', edit_customer_document_path(customer_document) %></td>
        <td><%= link_to 'Destroy', customer_document, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

