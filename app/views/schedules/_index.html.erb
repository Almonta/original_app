
<% schedules.each do |schedule| %>
<div class="schedule-content" id ="this_schedule_<%= schedule.id %>"></div>
  <% if schedule.id.present? %>
    <table class="table table-hover">
      <tbody>
        <tr class="">
          <td class="col-2">
            <%= schedule.serial_number %>
          </td>
          <td class="col-2">
            <%= l schedule.line_on, format: :long, default: '-' %>
          </td>
          <td class="col-2">
            <%= l schedule.completed_on, format: :long, default: '-' %>
          </td>
          <td class="col-2">
            <%= l schedule.shipmented_on, format: :long, default: '-' %>
          </td>
          <td class="col-2">
            <%= l schedule.deliveried_on, format: :long, default: '-' %>
          </td>
          <% if (current_user.department == 'planning') || (current_user.name == "ゲスト") || (current_user.name == "ゲスト管理者") %>
            <td class="col-1">
              <%= link_to edit_customer_schedule_path(customer, schedule), remote: true, class: "edit_icon_gray" do %>
                <i class="far fa-edit"></i>
              <% end %>
            </td>
            <td class="col-1">
              <%= link_to customer_schedule_path(schedule.customer_id, schedule.id), method: :delete, remote: true, data: { confirm: "本当に削除しますか?"}, class: "delete_icon_gray" do %>
                <i class="far fa-trash-alt"></i>
              <% end %>
            </td>
          <% else %>
            <td class="col-2"></td>
          <% end %>
        </tr>
      </tbody>
    </table>
  <% end %>
<% end %>