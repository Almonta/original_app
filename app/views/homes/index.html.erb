<div class="container">
  <h2 class="page_title_en">Home</h2>
  <h5 class="page_title_ja">製品・お客様一覧</h5>
  <div class="row">
    <div class="col-6">
      <h2 class="page_title_en">Products</h2>
      <h5 class="page_title_ja">製品</h5>

      <%= form_with url: homes_path, method: :get, local: true do |s| %>
        <%#= s.label :name, 'プロダクト名' %>
        <%= s.text_field :search, placeholder: 'プロダクト名で検索' %>
        <%= s.submit '検索', name: nil %>
      <% end %>
      <hr>

      <div class="button_new">
        <%= link_to new_product_path do %>
        <button type="button" class="btn btn-warning"><%= t('views.button.new_product') %></button>
        <% end %>
      </div>

      <div class="row">
        <% @products.each do |product| %>
          <div class="col-lg-4 col-md-6 p-1"> 
            <div class="card product_title_card rounded-pill shadow-sm" style="width: 99%;">
              <div class="card-body">
                <h5 class="card-title"><%= product.name %></h5>
                <%= link_to t('views.button.show'), product, class: "card-link" %>
                <% if (current_user == product.user) || (current_user.id == 1) || (current_user.id ==2) %>
                <%= link_to t('views.button.edit'), edit_product_path(product), class: "card-link" %>
                <%= link_to t('views.button.destroy'), product, method: :delete, data: { confirm: t('views.messages.confirm_destroy') }, class: "card-link" %>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <div class="col-6">
      <h2 class="page_title_en">Customers</h2>
      <h5 class="page_title_ja">お客様</h5>

      <%= search_form_for @q, url: homes_path do |f| %>
        <div class="row">
          <div class="col-lg-4 col-md-5">
            <%#= f.label :number_cont, 'カスタマーNo.' %>
            <%= f.search_field :number_cont, placeholder: 'カスタマーNoで検索' %>
          </div>
          <div class="col-lg-4 col-md-5">
            <%#= f.label :name_cont, 'カスタマー名' %>
            <%= f.search_field :name_cont, placeholder: 'カスタマー名で検索' %>
          </div>
          <div class="col-lg-4 col-md-2 d-flex align-items-end text-left" id="customer_search_button">
            <%= f.submit '検索' %>
          </div>
          <div class="customer_no_sort">
            並び替え:
            <%= sort_link(@q, :number, 'No順で表示') %>
          </div>
        </div>
      <% end %>
      <hr>

      <div class="button_new">
        <%= link_to new_customer_path do %>
        <button type="button" class="btn btn-warning"><%= t('views.button.new_customer') %></button>
        <% end %>
      </div>

      <div class="row">
        <% @customers.each do |customer| %>
          <div class="col-lg-4 col-md-6 p-1"> 
            <div class="card customer_title_card shadow-sm" style="width: 99%;">
              <div class="card-body">
                <h5 class="card-title"><%= customer.number %></h5>
                <h6 class="card-subtitle mb-2 text-muted"><%= customer.name %></h6>
                <%= link_to t('views.button.show'), customer, class: "card-link" %>
                <% if (current_user == customer.user) || (current_user.id == 1) || (current_user.id ==2) %>
                  <%= link_to t('views.button.edit'), edit_customer_path(customer), class: "card-link" %>
                  <%= link_to t('views.button.destroy'), customer, method: :delete, data: { confirm: t('views.messages.confirm_destroy') }, class: "card-link" %>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
