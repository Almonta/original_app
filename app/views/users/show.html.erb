<div class="container-fluid">
  <h3>マイページ</h3>
  <h3>名前</h3>
  <p><%= @user.name %></p>
  <h3>所属</h3>
  <p><%= @user.department_i18n %></p>
  <h3>メールアドレス</h3>
  <p><%= @user.email %></p>

  <%= link_to t('views.button.edit'), edit_user_registration_path %>

  <div class="parent">
    <div class="created_products_customers_title">
      <h4>作成したプロダクト・カスタマー</h4>
    </div>
    <ul class="created_products_customers_title_card">
      <% @products.each do |product| %>
      <li class="child">
        <%= product.name %>
        <%= link_to '権限移行' %>
      </li>
      <% end %>

      <% @customers.each do |customer| %>
      <li class="child">
        <%= customer.name %>
        <%= link_to '権限移行' %>
      </li>
      <% end %>
    </ul>
  </div>


  <h5>投稿したドキュメント</h5>
  <% @product_documents.each do |product_document| %>
    <%= product_document.name %>
    <%= link_to '権限移行' %>
    <br>
  <% end %>
  <% @customer_documents.each do |customer_document| %>
    <%= customer_document.name %>
    <%= link_to '権限移行' %>
    <br>
  <% end %>

</div>

