

<p>
  <strong>Customer number:</strong>
  <%= @customer.number %>
</p>

<p>
  <strong>Customer name:</strong>
  <%= @customer.name %>
</p>

<% if @user_customer.present? %>
  <%= link_to 'お気に入り解除する', user_customer_path(id: @user_customer.id), method: :delete, class: 'btn btn-danger' %>
<% else %>
  <%= link_to 'お気に入りする', user_customers_path(customer_id: @customer.id), method: :post, class: 'btn btn-primary' %>
<% end %>

<%= link_to t('views.button.edit'), edit_customer_path(@customer) %> |
