<div class="container">
  <div class="login_page">
    <h3><%= t(".sign_up") %></h3>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="form_field">
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label t(".name") %>
          <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: 'メーカーオーサムさん', class: "login_form" %>
        </div>

        <div class="field">
          <%= f.label t(".department") %>
          <%= f.select :department, User.departments_i18n.keys.map { |k| [I18n.t("enums.user.department.#{k}"), k] }, {}, {class: "login_form"} %>
        </div>

        <div class="field">
          <%= f.label t(".email") %>
          <%= f.email_field :email, autocomplete: "email", placeholder: 'maker@awesome.com', class: "login_form" %>
        </div>

        <div class="field">
          
          <%= f.label t(".password"), class: "password_form" %>
          <% if @minimum_password_length %>
          <em><%= t("devise.shared.minimum_password_length", count: @minimum_password_length) %></em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", placeholder: 'password', class: "login_form" %>
        </div>

        <div class="field">
          <%= f.label t(".password_confirmation") %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: 'password', class: "login_form" %>
        </div>
      </div>
      <div class="actions">
        <%= f.submit t(".sign_up"), class: "signup_submit_button" %>
      </div>
    <% end %>
    <br>
    <h5><%= t(".registered") %></h5>
    <div class="login_checkout_button">
      <%= link_to t(".sign_in"), new_user_session_path %>
    </div>

  </div>
</div>