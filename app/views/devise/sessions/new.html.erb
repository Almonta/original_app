<div class="container">
  <div class="login_page">
    <h3><%= t('.sign_in') %></h3>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form_field">
      <div class="field">
        <%= f.label t(".email") %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'maker@awesome.com' %>
      </div>

      <div class="field">
        <%= f.label t(".password") %>
        <%= f.password_field :password, autocomplete: "current-password", placeholder: 'password' %>
      </div>
    </div>
    <!--
      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>
    -->
      <div class="actions">
        <%= f.submit t('.sign_in') %>
      </div>
    <% end %>
    <br />
    <h5>サインアップがお済みでない場合</h5>
    <%= render "devise/shared/links" %>
    <br>
    <h4>ゲストログイン</h4>
    <div>
      <tr>
        <td><%= link_to '一般ユーザ', users_guest_sign_in_path, method: :post %>|</td>
        <td><%= link_to '管理者', users_admin_guest_sign_in_path, method: :post %></td>
      </tr>
    </div>
  </div>
</div>