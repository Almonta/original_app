<!DOCTYPE html>
<html>
  <head>
    <title>MakerAwesome</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">

        <a class="navbar-brand" href="#">Maker awesome</a>

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

      <div class="collapse navbar-collapse justify-content-end" id="navbarNavAltMarkup">
        <div class="navbar-nav">
          <% if user_signed_in? %>
            <a class="nav-item nav-link active" href="#">製品・お客様一覧 <span class="sr-only">(current)</span></a>
            <a class="nav-item nav-link" href="#">★登録プロジェクト</a>
            <a class="nav-item nav-link" href="#">プロフィール</a>
            <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "nav-item nav-link" %>
          <% else %>
            <%= link_to "サインアップ", new_user_registration_path, class: "nav-item nav-link active" %>
            <%= link_to "ログイン", new_user_session_path, class: "nav-item nav-link" %>
          <% end %>
        </div>
      </div>
    </nav>
  <% if notice %>
    <p class="alert alert-notice"><%= notice %></p>
  <% end %>
  <% if alert %>
    <p class="alert alert-error"><%= alert %></p>
  <% end %>
    <%= yield %>
    
  </body>
</html>
