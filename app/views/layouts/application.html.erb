<!DOCTYPE html>
<html>
  <head>
    <title>MakerAwesome</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <a class="navbar-brand" href="#">Navbar</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
      <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav">
          <% if user_signed_in? %>
            <a class="nav-item nav-link active" href="#">製品・お客様一覧 <span class="sr-only">(current)</span></a>
            <a class="nav-item nav-link" href="#">★登録プロジェクト</a>
            <a class="nav-item nav-link" href="#">プロフィール</a>
            <a class="nav-item nav-link" href="#"><%= link_to "ログアウト", destroy_user_session_path, method: :delete %></a>
          <% else %>
            <a class="nav-item nav-link active" href="#"><%= link_to "サインアップ", new_user_registration_path %> <span class="sr-only">(current)</span></a>
            <a class="nav-item nav-link" href="#"><%= link_to "ログイン", new_user_session_path %></a>
          <% end %>
        </div>
      </div>
    </nav>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= yield %>
  </body>
</html>
